<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="-2dp"
    >
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <stroke android:color="@color/custom_cardview" android:width="1dp" />
            <solid android:color="@android:color/transparent" />
            <corners android:topLeftRadius="@dimen/custom_cardview_radius" android:topRightRadius="@dimen/custom_cardview_radius" />
        </shape>
    </item>

    <item android:drawable="@drawable/custom_cardview_bg_top" />
</ripple>
</inset>
